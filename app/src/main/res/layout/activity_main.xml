<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.corestal.wpos.bank.main.MainActivity">

    <include layout="@layout/common_title_bar"
        android:id="@+id/title_bar"
        />

    <ListView
        android:id="@+id/order_list_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ll_take_no"
        android:layout_below="@+id/title_bar"
        android:divider="#00000000"
        android:footerDividersEnabled="false"
        android:dividerHeight="5dp"></ListView>


    <LinearLayout
        android:id="@+id/ll_take_no"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/titlebg"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_take_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:gravity="center_horizontal"
            android:textSize="@dimen/font_size_big"
            android:background="@drawable/main_take_no"/>

    </LinearLayout>

</RelativeLayout>